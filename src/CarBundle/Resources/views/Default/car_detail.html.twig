{% block title %}
    {{ parent() }}
    {{ car.make.name }}
{% endblock %}

{% block body %}
    <h1>{{ car.make.name }}</h1>
    <span class="badge">{{ car.year }}</span>
    <span class="badge">{{ car.price }}</span>
